<head>

<link href='mapbox://styles/evanlaulom/ckw652owj21ej15p1qhu14oni' rel='stylesheet' />

</head>

<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www.gea.com/fr/binaries/gea-craft-brewing-plug-and-win_tcm29-50426.jpg)">
  Discover our Craft Beer Factories
</div>
<div class="factory-position">
  <div class="left">
    <div class="cards">
      <% @factories.each do |factory| %>
        <%= link_to factory_path(factory) do %>
        <%= render 'shared/card-category', factory: factory %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="right">
    <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
</div>

